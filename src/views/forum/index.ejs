<%- include('../partials/header') %>

<h2><%= t('auth.welcomeNew') %></h2>

<div class="alert alert-info" style="margin-bottom: 2rem;">
    <p><strong><%= t('community.peerSupport') %></strong></p>
    <p><%= t('community.safeSpace') %></p>
</div>

<% if (typeof user === 'undefined' || !user) { %>
<div style="margin-bottom: 2rem;">
    <p><%= t('auth.anonymousAccount') %></p>
    <a href="/auth/register" class="btn"><%= t('nav.register') %></a>
    <a href="/auth/login" class="btn btn-secondary" style="margin-left: 1rem;"><%= t('nav.login') %></a>
</div>
<% } else { %>
<div style="margin-bottom: 2rem;">
    <p><%= t('auth.welcomeBack', { pseudo: user.pseudo }) %></p>
</div>
<% } %>

<hr style="margin: 2rem 0; border: none; border-top: 1px solid #ccc;">

<h3><%= t('nav.threads') %></h3>
<ul>
    <li>✅ <%= t('auth.anonymousAccount') %></li>
    <li>✅ <%= t('privacy.anonymous') %></li>
    <li>⏳ <%= t('forum.createThread') %></li>
    <li>⏳ <%= t('forum.postReply') %></li>
    <li>⏳ <%= t('moderation.moderationQueue') %></li>
    <li>⏳ <%= t('forum.search') %></li>
</ul>

<div class="alert alert-info" style="margin-top: 2rem;">
    <p><strong><%= t('privacy.title') %>:</strong></p>
    <ul style="margin-left: 1.5rem; margin-top: 0.5rem;">
        <li><%= t('privacy.noTracking') %></li>
        <li><%= t('privacy.noPersonalData') %></li>
        <li><%= t('privacy.belgianHosting') %></li>
        <li><%= t('privacy.gdprCompliant') %></li>
    </ul>
</div>

<%- include('../partials/footer') %>
