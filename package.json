{
  "name": "le-syndicat-des-tox",
  "version": "1.0.0",
  "description": "Le Syndicat des Tox - Anonymous peer support forum for Belgian drug addict communities",
  "main": "src/server.js",
  "scripts": {
    "start": "NODE_ENV=production node src/server.js",
    "dev": "NODE_ENV=development nodemon src/server.js",
    "test": "npm run test:unit && npm run test:integration && npm run test:security",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:integration": "jest --testPathPattern=tests/integration",
    "test:security": "jest --testPathPattern=tests/security",
    "test:a11y": "pa11y-ci",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "db:migrate": "node scripts/migrate.js",
    "db:seed": "node scripts/seed.js",
    "build:css": "postcss src/public/css/main.css -o dist/public/css/main.min.css",
    "build:js": "esbuild src/public/js/app.js --bundle --minify --outfile=dist/public/js/app.min.js",
    "build": "npm run build:css && npm run build:js",
    "clean": "rm -rf dist logs temp",
    "security:check": "npm audit && npx snyk test",
    "security:update": "npm update && npm audit fix"
  },
  "keywords": [
    "forum",
    "anonymous",
    "peer-support",
    "harm-reduction",
    "belgium"
  ],
  "author": "",
  "license": "AGPL-3.0",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "dependencies": {
    "express": "^4.19.2",
    "express-session": "^1.18.0",
    "connect-redis": "^7.1.1",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.2.0",
    "csurf": "^1.11.0",
    "argon2": "^0.31.2",
    "mysql2": "^3.9.7",
    "ioredis": "^5.3.2",
    "ejs": "^3.1.10",
    "dotenv": "^16.4.5",
    "winston": "^3.13.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "isomorphic-dompurify": "^2.12.0",
    "validator": "^13.12.0",
    "i18n": "^0.15.1",
    "node-cron": "^3.0.3",
    "express-validator": "^7.0.1"
  },
  "devDependencies": {
    "nodemon": "^3.1.0",
    "jest": "^29.7.0",
    "supertest": "^7.0.0",
    "eslint": "^8.57.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-security": "^3.0.0",
    "prettier": "^3.2.5",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "pa11y-ci": "^3.1.0",
    "postcss": "^8.4.38",
    "postcss-cli": "^11.0.0",
    "autoprefixer": "^10.4.19",
    "cssnano": "^7.0.1",
    "esbuild": "^0.21.5",
    "@types/node": "^20.14.2"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "./coverage",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js"
    ],
    "testTimeout": 10000,
    "setupFilesAfterEnv": [
      "./tests/setup.js"
    ]
  },
  "eslintConfig": {
    "extends": [
      "airbnb-base",
      "plugin:security/recommended"
    ],
    "env": {
      "node": true,
      "jest": true
    },
    "rules": {
      "no-console": "error",
      "max-len": [
        "error",
        {
          "code": 120
        }
      ],
      "comma-dangle": [
        "error",
        "never"
      ]
    }
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "printWidth": 120
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test:unit"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/bonplan.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/bonplan/issues"
  },
  "homepage": "https://github.com/yourusername/bonplan#readme"
}