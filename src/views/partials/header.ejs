    </div>

    <header>
        <div class="container">
            <h1>ü§ù <%= t('app.name') %></h1>
            <nav>
                <a href="/"><%= t('nav.home') %></a>
                <a href="/threads"><%= t('forum.threads') %></a>
                <a href="/about"><%= t('resources.title') %></a>
                <% if (typeof user !== 'undefined' && user) { %>
                    <span style="color: #95a5a6;"><%= t('auth.welcomeBack', { pseudo: user.pseudo }) %></span>
                    <a href="/auth/logout"><%= t('nav.logout') %></a>
