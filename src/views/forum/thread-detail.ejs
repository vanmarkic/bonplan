<%- include('../partials/header', { title: thread.title + ' - Le Syndicat des Tox' }) %>

<!-- Breadcrumb navigation -->
<div style="margin-bottom: 1.5rem;">
    <a href="/forum/threads" style="color: #3498db; text-decoration: none;">‚Üê <%= t('pagination.previous') %></a>
</div>

<!-- Thread content -->
<article style="margin-bottom: 2rem;">
    <% if (thread.isPinned) { %>
        <div class="alert alert-info" style="margin-bottom: 1rem;">
            üìå <%= t('forum.isPinned') %>
        </div>
    <% } %>

    <% if (thread.isLocked) { %>
        <div class="alert alert-warning" style="margin-bottom: 1rem;">
            üîí <%= t('forum.threadLocked') %>
        </div>
    <% } %>

    <h1 style="font-size: 1.75rem; margin-bottom: 1rem;"><%= thread.title %></h1>

    <div class="thread-meta" style="margin-bottom: 1.5rem;">
        <span><%= t('forum.author') %>: <strong><%= thread.author || t('forum.deleted') %></strong></span>
        <% if (thread.isModerator) { %>
            <span class="moderator-badge">üõ°Ô∏è <%= t('moderation.moderator') %></span>
        <% } %>
        <span> ‚Ä¢ <%= thread.createdAt %></span>
        <% if (thread.isEdited) { %>
            <span> ‚Ä¢ (<%= t('forum.edited') %>)</span>
        <% } %>
    </div>

    <div style="font-size: 1.05rem; line-height: 1.7; margin-bottom: 1.5rem;">
        <% if (thread.isDeleted) { %>
            <p class="deleted-content"><%= t('forum.deleted') %></p>
        <% } else { %>
            <%- thread.content %>
        <% } %>
    </div>

    <!-- Thread actions -->
    <% if (typeof user !== 'undefined' && user) { %>
        <div class="thread-actions">
            <% if (user.id === thread.authorId && thread.canEdit) { %>
                <a href="/forum/threads/<%= thread.id %>/edit" class="btn btn-secondary">
                    ‚úèÔ∏è Modifier
                </a>
                <% if (thread.editTimeRemaining) { %>
                    <span class="edit-timer">
                        ‚è±Ô∏è <%= thread.editTimeRemaining %> restantes pour modifier
                    </span>
                <% } %>
                <button onclick="if(confirm('√ätes-vous s√ªr de vouloir supprimer ce message?')) { document.getElementById('delete-form').submit(); }" class="btn btn-danger">
                    üóëÔ∏è Supprimer
                </button>
                <form id="delete-form" method="POST" action="/forum/threads/<%= thread.id %>/delete" style="display: none;">
                    <input type="hidden" name="_method" value="DELETE">
                </form>
            <% } %>

            <% if (user.id !== thread.authorId) { %>
                <button onclick="document.getElementById('report-form').style.display='block'" class="btn btn-warning">
                    ‚ö†Ô∏è <%= t('moderation.report') %>
                </button>
            <% } %>

            <% if (user.isModerator) { %>
                <div style="margin-top: 1rem; padding-top: 1rem; border-top: 2px solid #e74c3c;">
                    <strong style="color: #e74c3c;"><%= t('moderation.moderator') %>:</strong>
                    <div style="margin-top: 0.5rem;">
                        <% if (!thread.isPinned) { %>
                            <button onclick="if(confirm('<%= t('moderation.pin') %>?')) { moderateThread('pin'); }" class="btn btn-secondary">
                                üìå <%= t('moderation.pin') %>
                            </button>
                        <% } else { %>
                            <button onclick="if(confirm('<%= t('moderation.unpin') %>?')) { moderateThread('unpin'); }" class="btn btn-secondary">
                                üìå <%= t('moderation.unpin') %>
                            </button>
                        <% } %>
                        <% if (!thread.isLocked) { %>
                            <button onclick="if(confirm('<%= t('moderation.lock') %>?')) { moderateThread('lock'); }" class="btn btn-warning">
                                üîí <%= t('moderation.lock') %>
                            </button>
                        <% } else { %>
                            <button onclick="if(confirm('<%= t('moderation.unlock') %>?')) { moderateThread('unlock'); }" class="btn btn-warning">
                                üîì <%= t('moderation.unlock') %>
                            </button>
                        <% } %>
                        <% if (!thread.isHidden) { %>
                            <button onclick="if(confirm('<%= t('moderation.hide') %>?')) { moderateThread('hide'); }" class="btn btn-danger">
                                üëÅÔ∏è <%= t('moderation.hide') %>
                            </button>
                        <% } else { %>
                            <button onclick="if(confirm('<%= t('moderation.unhide') %>?')) { moderateThread('show'); }" class="btn btn-secondary">
                                üëÅÔ∏è <%= t('moderation.unhide') %>
                            </button>
                        <% } %>
                    </div>
                </div>
                <script>
                function moderateThread(action) {
                    const form = document.createElement('form');
                    form.method = 'POST';
                    form.action = '/forum/threads/<%= thread.id %>/moderate';
                    const input = document.createElement('input');
                    input.type = 'hidden';
                    input.name = 'action';
                    input.value = action;
                    form.appendChild(input);
                    document.body.appendChild(form);
                    form.submit();
                }
                </script>
            <% } %>
        </div>

        <!-- Report form (hidden by default) -->
        <div id="report-form" class="report-form" style="display: none;">
            <h3><%= t('moderation.reportContent') %></h3>
            <form method="POST" action="/forum/threads/<%= thread.id %>/report">
                <div class="form-group">
                    <label for="reason"><%= t('moderation.reportReason') %>:</label>
                    <select name="reason" id="reason" required>
                        <option value=""><%= t('validation.required') %></option>
                        <option value="spam"><%= t('moderation.reason.spam') %></option>
                        <option value="harmful"><%= t('moderation.reason.harmful') %></option>
                        <option value="sourcing"><%= t('moderation.reason.sourcing') %></option>
                        <option value="personal_attack"><%= t('moderation.reason.personal_attack') %></option>
                        <option value="other"><%= t('moderation.reason.other') %></option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="details"><%= t('moderation.reportDescription') %>:</label>
                    <textarea name="details" id="details" rows="3" maxlength="500"></textarea>
                </div>
                <button type="submit" class="btn btn-warning"><%= t('actions.submit') %></button>
                <button type="button" onclick="document.getElementById('report-form').style.display='none'" class="btn btn-secondary"><%= t('actions.cancel') %></button>
            </form>
        </div>
    <% } %>
</article>

<hr style="margin: 2rem 0; border: none; border-top: 2px solid #ecf0f1;">

<!-- Replies section -->
<section>
    <h2 style="margin-bottom: 1.5rem;"><%= t('forum.replies') %> (<%= replies ? replies.length : 0 %>)</h2>

    <% if (replies && replies.length > 0) { %>
        <% replies.forEach(reply => { %>
            <div class="reply" id="reply-<%= reply.id %>">
                <div class="thread-meta" style="margin-bottom: 0.75rem;">
                    <strong><%= reply.author || t('forum.deleted') %></strong>
                    <% if (reply.isModerator) { %>
                        <span class="moderator-badge">üõ°Ô∏è <%= t('moderation.moderator') %></span>
                    <% } %>
                    <span> ‚Ä¢ <%= reply.createdAt %></span>
                    <% if (reply.isEdited) { %>
                        <span> ‚Ä¢ (<%= t('forum.edited') %>)</span>
                    <% } %>
                </div>

                <div style="line-height: 1.6;">
                    <% if (reply.isDeleted) { %>
                        <p class="deleted-content"><%= t('forum.deleted') %></p>
                    <% } else { %>
                        <%- reply.content %>
                    <% } %>
                </div>

                <% if (typeof user !== 'undefined' && user) { %>
                    <div style="margin-top: 0.75rem;">
                        <% if (user.id === reply.authorId && reply.canEdit) { %>
                            <button onclick="editReply('<%= reply.id %>')" class="btn btn-secondary" style="padding: 0.25rem 0.75rem; font-size: 0.875rem;">
                                ‚úèÔ∏è <%= t('actions.edit') %>
                            </button>
                            <% if (reply.editTimeRemaining) { %>
                                <span class="edit-timer" style="font-size: 0.75rem;">
                                    <%= reply.editTimeRemaining %>
                                </span>
                            <% } %>
                            <button onclick="if(confirm('<%= t('forum.confirmDelete') %>?')) { deleteReply('<%= reply.id %>'); }" class="btn btn-danger" style="padding: 0.25rem 0.75rem; font-size: 0.875rem;">
                                üóëÔ∏è <%= t('actions.delete') %>
                            </button>
                        <% } %>
                        <% if (user.id !== reply.authorId) { %>
                            <button onclick="reportReply('<%= reply.id %>')" class="btn btn-warning" style="padding: 0.25rem 0.75rem; font-size: 0.875rem;">
                                ‚ö†Ô∏è <%= t('moderation.report') %>
                            </button>
                        <% } %>
                        <% if (user.isModerator && !reply.isDeleted) { %>
                            <button onclick="if(confirm('<%= t('moderation.hide') %>?')) { moderateReply('<%= reply.id %>', 'hide'); }" class="btn btn-danger" style="padding: 0.25rem 0.75rem; font-size: 0.875rem;">
                                üëÅÔ∏è <%= t('moderation.hide') %>
                            </button>
                        <% } %>
                    </div>
                <% } %>
            </div>
        <% }); %>
    <% } else { %>
        <p style="color: #7f8c8d; text-align: center; padding: 2rem;"><%= t('forum.noReplies') %></p>
    <% } %>

    <!-- Reply form -->
    <% if (typeof user !== 'undefined' && user && !thread.isLocked) { %>
        <div class="reply-form" style="margin-top: 2rem;">
            <h3><%= t('forum.newReply') %></h3>
            <form method="POST" action="/forum/threads/<%= thread.id %>/replies">
                <div class="form-group">
                    <label for="content"><%= t('forum.body') %>:</label>
                    <textarea name="content" id="content" required minlength="10" maxlength="5000" onkeyup="updateCharCount(this)"></textarea>
                    <div class="char-counter">
                        <span id="char-count">0</span> / 5000
                    </div>
                </div>
                <button type="submit" class="btn"><%= t('forum.postReply') %></button>
            </form>
        </div>
    <% } else if (!user) { %>
        <div class="alert alert-info" style="margin-top: 2rem;">
            <p><strong><%= t('community.peerSupport') %></strong></p>
            <p><a href="/auth/login"><%= t('nav.login') %></a> <%= t('nav.register').toLowerCase() %> <a href="/auth/register"><%= t('auth.anonymousAccount') %></a></p>
        </div>
    <% } %>
</section>

<script>
function updateCharCount(textarea) {
    const count = textarea.value.length;
    const counter = document.getElementById('char-count');
    counter.textContent = count;

    const container = counter.parentElement;
    container.className = 'char-counter';
    if (count > 4500) {
        container.className = 'char-counter warning';
    }
    if (count > 4900) {
        container.className = 'char-counter error';
    }
}

function deleteReply(replyId) {
    const form = document.createElement('form');
    form.method = 'POST';
    form.action = '/forum/replies/' + replyId + '/delete';
    const method = document.createElement('input');
    method.type = 'hidden';
    method.name = '_method';
    method.value = 'DELETE';
    form.appendChild(method);
    document.body.appendChild(form);
    form.submit();
}

function reportReply(replyId) {
    if (confirm('Signaler cette r√©ponse comme inappropri√©e?')) {
        const form = document.createElement('form');
        form.method = 'POST';
        form.action = '/forum/replies/' + replyId + '/report';
        document.body.appendChild(form);
        form.submit();
    }
}

function editReply(replyId) {
    window.location.href = '/forum/replies/' + replyId + '/edit';
}

function moderateReply(replyId, action) {
    const form = document.createElement('form');
    form.method = 'POST';
    form.action = '/forum/replies/' + replyId + '/moderate';
    const input = document.createElement('input');
    input.type = 'hidden';
    input.name = 'action';
    input.value = action;
    form.appendChild(input);
    document.body.appendChild(form);
    form.submit();
}
</script>

<%- include('../partials/footer') %>