<%- include('../partials/header') %>

<h2><%= t('privacyPolicy.title') %></h2>

<div style="max-width: 800px;">
    <p><em><%= t('privacyPolicy.lastUpdate') %>: <%= new Date().toLocaleDateString(locale || 'fr-FR') %></em></p>

    <h3><%= t('privacyPolicy.commitment') %></h3>
    <p><strong><%= t('privacyPolicy.commitmentText') %></strong></p>
    <p><%= t('privacyPolicy.minimization') %></p>

    <h3><%= t('privacyPolicy.dataCollected') %></h3>
    <table style="width: 100%; border-collapse: collapse; margin: 1rem 0;">
        <tr style="background: #ecf0f1;">
            <th style="padding: 0.5rem; text-align: left; border: 1px solid #ccc;"><%= t('privacyPolicy.dataType') %></th>
            <th style="padding: 0.5rem; text-align: left; border: 1px solid #ccc;"><%= t('privacyPolicy.collected') %></th>
        </tr>
        <tr>
            <td style="padding: 0.5rem; border: 1px solid #ccc;"><%= t('privacyPolicy.ipAddress') %></td>
            <td style="padding: 0.5rem; border: 1px solid #ccc;"><strong>❌ <%= t('privacyPolicy.no') %></strong> (<%= t('privacyPolicy.ipAnonymized') %>)</td>
        </tr>
        <tr>
            <td style="padding: 0.5rem; border: 1px solid #ccc;"><%= t('privacyPolicy.email') %></td>
            <td style="padding: 0.5rem; border: 1px solid #ccc;"><strong>❌ <%= t('privacyPolicy.no') %></strong> (<%= t('privacyPolicy.neverAsked') %>)</td>
        </tr>
        <tr>
            <td style="padding: 0.5rem; border: 1px solid #ccc;"><%= t('privacyPolicy.phone') %></td>
            <td style="padding: 0.5rem; border: 1px solid #ccc;"><strong>❌ <%= t('privacyPolicy.no') %></strong> (<%= t('privacyPolicy.neverAsked') %>)</td>
        </tr>
        <tr>
            <td style="padding: 0.5rem; border: 1px solid #ccc;"><%= t('privacyPolicy.realName') %></td>
            <td style="padding: 0.5rem; border: 1px solid #ccc;"><strong>❌ <%= t('privacyPolicy.no') %></strong> (<%= t('privacyPolicy.neverAsked') %>)</td>
        </tr>
        <tr>
            <td style="padding: 0.5rem; border: 1px solid #ccc;"><%= t('privacyPolicy.location') %></td>
            <td style="padding: 0.5rem; border: 1px solid #ccc;"><strong>❌ <%= t('privacyPolicy.no') %></strong> (<%= t('privacyPolicy.noGeolocation') %>)</td>
        </tr>
        <tr>
            <td style="padding: 0.5rem; border: 1px solid #ccc;"><%= t('privacyPolicy.pseudo') %></td>
            <td style="padding: 0.5rem; border: 1px solid #ccc;"><strong>✅ <%= t('privacyPolicy.yes') %></strong> (<%= t('privacyPolicy.pseudoNote') %>)</td>
        </tr>
        <tr>
            <td style="padding: 0.5rem; border: 1px solid #ccc;"><%= t('privacyPolicy.pin') %></td>
            <td style="padding: 0.5rem; border: 1px solid #ccc;"><strong>✅ <%= t('privacyPolicy.yes') %></strong> (<%= t('privacyPolicy.pinEncrypted') %>)</td>
        </tr>
        <tr>
            <td style="padding: 0.5rem; border: 1px solid #ccc;"><%= t('privacyPolicy.messages') %></td>
            <td style="padding: 0.5rem; border: 1px solid #ccc;"><strong>✅ <%= t('privacyPolicy.yes') %></strong> (<%= t('privacyPolicy.messagesNote') %>)</td>
        </tr>
    </table>

    <h3><%= t('privacyPolicy.cookies') %></h3>
    <p><%= t('privacyPolicy.cookiesIntro') %></p>
    <ul>
        <li><strong><%= t('privacyPolicy.sessionCookie') %></strong> : <%= t('privacyPolicy.sessionCookieNote') %></li>
    </ul>
    <p><%= t('privacyPolicy.noCookies') %></p>

    <h3><%= t('privacyPolicy.analytics') %></h3>
    <p><strong><%= t('privacyPolicy.analyticsNone') %></strong></p>
    <p><%= t('privacyPolicy.analyticsNote') %></p>

    <h3><%= t('privacyPolicy.gdpr') %></h3>
    <p><%= t('privacyPolicy.gdprIntro') %></p>
    <ul>
        <li><strong><%= t('privacyPolicy.legalBasis') %></strong> <%= t('privacyPolicy.legalBasisText') %></li>
        <li><strong><%= t('privacyPolicy.dataMinimization') %></strong> <%= t('privacyPolicy.dataMinimizationText') %></li>
        <li><strong><%= t('privacyPolicy.storage') %></strong> <%= t('privacyPolicy.storageText') %></li>
        <li><strong><%= t('privacyPolicy.retention') %></strong> <%= t('privacyPolicy.retentionText') %></li>
    </ul>

    <h3><%= t('privacyPolicy.yourRights') %></h3>
    <p><%= t('privacyPolicy.yourRightsIntro') %></p>
    <ul>
        <li><strong><%= t('privacyPolicy.accessRight') %></strong> <%= t('privacyPolicy.accessRightText') %></li>
        <li><strong><%= t('privacyPolicy.deletionRight') %></strong> <%= t('privacyPolicy.deletionRightText') %></li>
        <li><strong><%= t('privacyPolicy.portabilityRight') %></strong> <%= t('privacyPolicy.portabilityRightText') %></li>
    </ul>
    <p><em><%= t('privacyPolicy.noRectification') %></em></p>

    <h3><%= t('privacyPolicy.security') %></h3>
    <p><%= t('privacyPolicy.securityIntro') %></p>
    <ul>
        <li>🔒 <%= t('privacyPolicy.https') %></li>
        <li>🔒 <%= t('privacyPolicy.pinEncryption') %></li>
        <li>🔒 <%= t('privacyPolicy.sessions') %></li>
        <li>🔒 <%= t('privacyPolicy.securityHeaders') %></li>
        <li>🔒 <%= t('privacyPolicy.sqlProtection') %></li>
        <li>🔒 <%= t('privacyPolicy.xssProtection') %></li>
        <li>🔒 <%= t('privacyPolicy.rateLimiting') %></li>
    </ul>

    <h3><%= t('privacyPolicy.dataSharing') %></h3>
    <p><strong><%= t('privacyPolicy.noSharing') %></strong></p>
    <p><%= t('privacyPolicy.noSharingNote') %></p>

    <h3><%= t('privacyPolicy.legal') %></h3>
    <p><%= t('privacyPolicy.legalIntro') %></p>
    <ul>
        <li><%= t('privacyPolicy.legalCan') %></li>
        <li><%= t('privacyPolicy.legalCannot') %></li>
    </ul>

    <h3><%= t('privacyPolicy.modifications') %></h3>
    <p><%= t('privacyPolicy.modificationsNote') %></p>

    <h3><%= t('privacyPolicy.contact') %></h3>
    <p><%= t('privacyPolicy.contactNote') %> <a href="/about"><%= t('privacyPolicy.aboutPage') %></a></p>

    <hr style="margin: 2rem 0;">

    <p style="font-style: italic; color: #7f8c8d;">
        <%= t('privacyPolicy.footer') %>
    </p>
</div>

<%- include('../partials/footer') %>
